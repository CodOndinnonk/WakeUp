<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/b">


    <DigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClockMainActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/buttonAddAlarm"
        android:textColor="@color/text_color_blue_light" />

    <ListView
        android:id="@+id/listViewMainActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_below="@+id/textClockMainActivity"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddAlarm"
        android:onClick="addAlarm"
        android:background="@android:drawable/ic_menu_add"
        android:layout_above="@+id/listViewMainActivity"
        android:layout_alignRight="@+id/listViewMainActivity"
        android:layout_alignParentTop="true"
        android:textColor="@color/text_color_blue_light" />

</RelativeLayout>
