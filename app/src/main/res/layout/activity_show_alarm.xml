<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.wakeup.ShowAlarm"
    android:background="@drawable/b">

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePickerShowAlarm"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:importantForAccessibility="@android:integer/status_bar_notification_info_maxnum"
        android:visibility="visible"
        android:background="#ffc8c8c8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content"
        android:id="@+id/infoFieldContextShowAlarm"
        android:textSize="25dp"
        android:textColor="@color/text_color_blue_light"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contentEnterFieldShowAlarm"
        android:layout_below="@+id/infoFieldContextShowAlarm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/buttonLeftShowAlarm"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:id="@+id/buttonLeftShowAlarm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:onClick="save_Create"
        android:textColor="@color/text_color_blue_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/buttonCancelShowAlarm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:onClick="cancel"
        android:textColor="@color/text_color_blue_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить"
        android:id="@+id/buttonDeleteShowAlarm"
        android:textColor="@color/text_color_blue_light"
        android:onClick="delete"
        android:layout_below="@+id/contentEnterFieldShowAlarm"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button1"
        android:layout_below="@+id/timePickerShowAlarm"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:maxHeight="3dp"
        android:maxWidth="3dp"
        android:onClick="cl1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button2"
        android:textSize="20dp"
        android:maxHeight="3dp"
        android:maxWidth="3dp"
        android:onClick="cl2"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button3"
        android:textSize="20dp"
        android:maxHeight="3dp"
        android:maxWidth="3dp"
        android:onClick="cl3"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button4"
        android:layout_below="@+id/timePickerShowAlarm"
        android:layout_toRightOf="@+id/button3"
        android:textSize="20dp"
        android:maxHeight="3dp"
        android:maxWidth="3dp"
        android:onClick="cl4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button5"
        android:layout_below="@+id/timePickerShowAlarm"
        android:layout_toRightOf="@+id/button4"
        android:textSize="20dp"
        android:maxHeight="3dp"
        android:maxWidth="3dp"
        android:onClick="cl5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:textSize="20dp"
        android:maxHeight="3dp"
        android:maxWidth="3dp"
        android:onClick="cl6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button7"
        android:layout_below="@+id/timePickerShowAlarm"
        android:layout_toRightOf="@+id/button6"
        android:textSize="20dp"
        android:maxHeight="3dp"
        android:maxWidth="3dp"
        android:onClick="cl7" />

</RelativeLayout>
