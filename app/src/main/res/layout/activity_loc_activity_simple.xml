<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LocActivitySimple"
    android:background="@drawable/b">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStopAlarmLocActivitySimple"
        android:layout_alignParentLeft="true"
        android:onClick="stopAlarm"
        android:textColor="@color/text_color_blue_light"
        android:text="off"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showInfoFieldLocActivitySimple"
        android:layout_below="@+id/buttonStopAlarmLocActivitySimple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:textColor="@color/text_color_blue_light" />

</RelativeLayout>
